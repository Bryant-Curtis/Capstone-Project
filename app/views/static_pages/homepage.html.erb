<header class="header group">
  <h1 class="famebook">famebook</h1>

  <form class="log-in-form group" action="<%= session_url %>" method="post">
    <%= auth_token_form %>

    <label>Email<br/>
      <input type="text" name="session[email]" value="">
    </label>

    <label>Password<br/>
      <input type="password" name="session[password]" value="">
    </label>

    <button>Log In</button>
  </form>
</header>

<main class="content">
  <section class="home-info">

  </section>

  <section class="sign-up-form">
    <form action="<%= users_url %>" method="post">
      <%= auth_token_form %>

      <input type="text" name="user[first_name]" value="First name">
      <input type="text" name="user[last_name]" value="Last Name">
      <input type="text" name="user[email]" value="Email">
      <input type="password" name="user[password]" value="">

      <button>Sign Up</button>
    </form>
  </section>
</main>

<footer class="footer">
